<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:rowCount="62"
    android:columnCount="1"
    android:background="#b8d0d4">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Computer Science"
        android:id="@+id/aboutDepartmentText"
        android:layout_gravity="center_horizontal"
        android:layout_row="51"
        android:layout_column="0"
        android:textSize="30dp"
        android:layout_below="@+id/aboutTitleText"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Pacific University"
        android:id="@+id/aboutUniversityText"
        android:textSize="30dp"
        android:layout_below="@+id/aboutDepartmentText"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Paper or Plastic"
        android:id="@+id/aboutTitleText"
        android:layout_marginTop="42dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="45dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="2015-2016"
        android:id="@+id/aboutYearText"
        android:textSize="30dp"
        android:layout_below="@+id/aboutUniversityText"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/sCreatedByAuthors"
        android:id="@+id/aboutAuthorsText"
        android:textAlignment="center"
        android:width="190dp"
        android:layout_below="@+id/aboutYearText"
        android:layout_marginTop="33dp"
        android:textSize="30dp"
        android:layout_alignLeft="@+id/aboutTitleText"
        android:layout_alignStart="@+id/aboutTitleText"
        android:layout_alignRight="@+id/aboutTitleText"
        android:layout_alignEnd="@+id/aboutTitleText" />

</RelativeLayout>